set nocompatible
set backspace=indent,eol,start
set history=100
set ignorecase
set smartcase
set title
set number
set showcmd
set laststatus=2
set showmatch
set matchtime=1
set termencoding=utf8
set encoding=utf8
set fenc=utf8
set statusline=%n\:%y%F\ \|%{(&fenc!=''?&fenc:&enc).'\|'.&ff.'\|'}%m%r%=
set wrap
set tabstop=4
syntax on

